<div class="container user-lists">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<% @users.each do |user| %>
				<div class="user-content">
					<dl>
						<dt>Name: </dt>
						<dd><%= user.name %></dd>
					</dl>
					<dl>
						<dt>Email: </dt>
						<dd><%= user.email %></dd>
					</dl>
					<dl>
						<dt>Account type: </dt>
						<dd><%= user.account_type %></dd>
					</dl>

					<% if user.account_type == 'banned' %>
						<a href="<%= unban_user_path(id: @user, user_id: user.id) %>" class="btn btn-success">Unban user</a>
					<% else %>
						<a href="<%= ban_user_path(id: @user, user_id: user.id) %>" class="btn btn-danger">Ban user</a>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>